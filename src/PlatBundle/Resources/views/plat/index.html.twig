{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/soiree/css/plat.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <!--<h1>RIZ</h1>-->

    <!-- Navbar principale -->
    <div class="nav_header" xmlns="http://www.w3.org/1999/html">
        <nav>
            <ul>
                <li><a href="{{ path("homepage") }}" title="Télécharger">Accueil</a></li>
                <li><a href="{{ path("plat_index") }}" title="Télécharger">Plat</a></li>
                <li><a href="{{ path("soiree_index") }}" title="Télécharger">Soiree</a></li>
                <li><a href="{{ path("participation_index") }}" title="Télécharger">Participation</a></li>
            </ul>
        </nav>
    </div>
    <!-- Fin Navbar principale -->

   


    <!-- Nom des entity -->
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Ingredients</th>
                <th>Recette</th>
                <th>Photos</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

        {% for plat in plats %}
            <tr>
                <td><a href="{{ path('plat_show', { 'id': plat.id }) }}">{{ plat.id }}</a></td>
                <td>{{ plat.nom }}</td>
                <td>{{ plat.ingredients }}</td>
                <td>{{ plat.recette }}</td>
                {#<td>{{ plat.photoPlat }}</td>#}
                <td><img class="image_plat" src="{{ asset('uploads/photosdeplats/')}}{{ plat.photoPlat }}"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('plat_show', { 'id': plat.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('plat_edit', { 'id': plat.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plat_new') }}">Create a new entry</a>
        </li>
    </ul>

    <!-- Début footer -->
    <footer>
        <p>© 2016 Copyright Party Caroline | <strong><span class="diff">Mentions légales</span></strong></p>
    </footer>
    <!-- Fin footer -->
{% endblock %}
