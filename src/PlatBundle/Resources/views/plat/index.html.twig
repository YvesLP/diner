        <div class="col-md-6 platimage">

                <img class="wp-image-10" src="https://demos-pgm.netdna-ssl.com/demos/rosa/wp-content/uploads/2014/06/duette_fall-900x599.jpg" alt="cheeries" height="480" width="660">
        </div>
    </div>


    <!-- Nom des entity -->
    <table>
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Nom</th>
                <th>Ingredients</th>
                <th>Recette</th>
                <th>Photos</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

        {% for plat in plats %}
            <tr>
                {#<td><a href="{{ path('plat_show', { 'id': plat.id }) }}">{{ plat.id }}</a></td>#}
                <td>{{ plat.nom }}</td>
                <td>{{ plat.ingredients }}</td>
                <td>{{ plat.recette }}</td>
                {#<td>{{ plat.photoPlat }}</td>#}
                <td><img class="image_plat" src="{{ asset('uploads/photosdeplats/')}}{{ plat.photoPlat }}"></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('plat_show', { 'id': plat.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('plat_edit', { 'id': plat.id }) }}">MAJ</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br/><br/>
    <ul>
        <li>
            <a href="{{ path('plat_new') }}">Créer un nouveau plat</a>
        </li>
    </ul>
