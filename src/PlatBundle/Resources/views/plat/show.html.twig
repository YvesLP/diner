{% extends 'base.html.twig' %}

{% block body %}
    <h1>Plat</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plat.id }}</td>
            </tr>
            <tr>
                <th>Nom du plat</th>
                <td>{{ plat.nom }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{{ plat.ingredients }}</td>
            </tr>
            <tr>
                <th>Recette</th>
                <td>{{ plat.recette }}</td>
            </tr>
            <tr>
                <th>Photo du plat</th>
                {#<td>{{ plat.photoPlat }}</td>#}
                <td><img class="image_plat" src="{{ asset('uploads/photosdeplats/')}}{{ plat.photoPlat }}"></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plat_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('plat_edit', { 'id': plat.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
