{% extends 'base.html.twig' %}

{% block body %}
    <div class="nav_header" xmlns="http://www.w3.org/1999/html">
        <nav>
            <ul class="black">
                <li><a href="{{ path("homepage") }}" title="Télécharger">Accueil</a></li>
                <li><a href="{{ path("plat_index") }}" title="Télécharger">Plat</a></li>
                <li><a href="{{ path("soiree_index") }}" title="Télécharger">Soiree</a></li>
                <li><a href="{{ path("participation_index") }}" title="Télécharger">Participation</a></li>
            </ul>
        </nav>
    </div>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plat.id }}</td>
            </tr>
            <tr>
                <th>Nom du plat</th>
                <td>{{ plat.nom }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{{ plat.ingredients }}</td>
            </tr>
            <tr>
                <th>Recette</th>
                <td>{{ plat.recette }}</td>
            </tr>
            <tr>
                <th>Photo du plat</th>
                {#<td>{{ plat.photoPlat }}</td>#}
                <td><img class="image_plat" src="{{ asset('uploads/photosdeplats/')}}{{ plat.photoPlat }}"></td>
            </tr>
        </tbody>
    </table>
    <br/><br/>
    <ul>
        <li>
            <a href="{{ path('plat_index') }}">Retour à la liste</a>
        </li>
        <br/>
        <li>
            <a href="{{ path('plat_edit', { 'id': plat.id }) }}">Modification</a>
        </li>
        <br/>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Suppression">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    <br/>
{% endblock %}
