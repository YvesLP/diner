{% extends 'base.html.twig' %}

{% block body %}
    <div class="nav_header" xmlns="http://www.w3.org/1999/html">
        <nav>
            <ul>
                <li><a href="{{ path("homepage") }}" title="Télécharger">Accueil</a></li>
                <li><a href="{{ path("plat_index") }}" title="Télécharger">Plat</a></li>
                <li><a href="{{ path("soiree_index") }}" title="Télécharger">Soiree</a></li>
                <li><a href="{{ path("participation_index") }}" title="Télécharger">Participation</a></li>
            </ul>
        </nav>
    </div>
    <h1>Liste des Participations aux soirées</h1>

    <div class="animation">
        <div class="loading">
            <img class="animation" src="https://lh6.googleusercontent.com/-ly7VNHdei4w/U4rS1A6OOYI/AAAAAAAE_Ac/3WfsX31b3yg/w500-h355-no/tumblr_n5iuntOTjU1sk1rjvo1_500.gif" alt="Loading" />

        </div>

        <article>
            <div class="entry-thumb static">
                <div class="part part-1"></div>
                <div class="part part-2"></div>
                <div class="part part-3"></div>
                <div class="part part-4"></div>
            </div>
        </article>


        <article>
            <div class="entry-thumb four">
                <div class="part part-1"></div>
                <div class="part part-2"></div>
                <div class="part part-3"></div>
                <div class="part part-4"></div>
            </div>
        </article>

        <article>
            <div class="entry-thumb three">
                <div class="part part-1"></div>
                <div class="part part-2"></div>
                <div class="part part-3"></div>
                <div class="part part-4"></div>
            </div>
        </article>

        <article>
            <div class="entry-thumb two">
                <div class="part part-1"></div>
                <div class="part part-2"></div>
                <div class="part part-3"></div>
                <div class="part part-4"></div>
            </div>
        </article>

        <article>
            <div class="entry-thumb one">
                <div class="part part-1"></div>
                <div class="part part-2"></div>
                <div class="part part-3"></div>
                <div class="part part-4"></div>
            </div>
        </article>
    </div>
    <table>
        <thead>
            <tr>
                <th>Participant</th>
                <th>Soirée</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participation in participations %}
            <tr>
                <td>{{ participation.participant.username }}</td>
                <td>{{ participation.soiree.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('participation_show', { 'id': participation.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('participation_edit', { 'id': participation.id }) }}">MAJ</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('participation_new') }}">Ajouter une participation</a>
        </li>
    </ul>
    <footer>
        <p>© 2016 Copyright Party Caroline | <strong><span class="diff">Mentions légales</span></strong></p>
    </footer>
{% endblock %}
