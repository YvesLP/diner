{% extends 'base.html.twig' %}

{% block body %}
    <h1>Black & White</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ soiree.id }}</td>
            </tr>
            <tr>
                <th>Nom de la soirée</th>
                <td>{{ soiree.nom }}</td>
            </tr>
            <tr>
                <th>Date de la soirée</th>
                <td>{% if soiree.dateSoiree %}{{ soiree.dateSoiree|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Plat</th>
                <td>{{ soiree.platId.nom }}</td>
            </tr>
            <tr>
                <th>Photo de la soirée</th>
                {#<td>{{ soiree.photoSoiree }}</td>#}
                <td><img class="image_soiree" src="{{ asset('uploads/photosdesoirees/')}}{{ soiree.photoSoiree }}"></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('soiree_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('soiree_edit', { 'id': soiree.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
